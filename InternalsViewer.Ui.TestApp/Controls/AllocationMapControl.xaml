<UserControl x:Class="InternalsViewer.Ui.TestApp.Controls.AllocationMapControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InternalsViewer.Ui.TestApp.Controls"
             xmlns:mvvm="http://prismlibrary.com/"
             mc:Ignorable="d"
             mvvm:ViewModelLocator.AutoWireViewModel="False"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <ScrollBar DockPanel.Dock="Right" Name="ScrollBar" Scroll="ScrollBar_OnScroll"/>
            <Grid Name="ViewPortContainer" Width="Auto" Height="Auto">
                <Rectangle Stroke="Green" />
                <Image Name="ImageViewport"  />
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
